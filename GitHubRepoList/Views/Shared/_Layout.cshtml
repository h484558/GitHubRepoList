<!DOCTYPE html>
<html ng-app="githubRepoList">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GitHub Repo List</title>

    <!--Default-->
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--Default-->

    <link rel="stylesheet" href="~/Content/ngDialog.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/ngDialog-theme-default.min.css" type="text/css" />

    <script type="text/javascript" src="http://cdn.jsdelivr.net/g/jquery@1,jquery.ui@1.10%28jquery.ui.core.min.js+jquery.ui.widget.min.js+jquery.ui.mouse.min.js+jquery.ui.sortable.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script type="text/javascript" src="https://code.angularjs.org/1.6.4/angular-cookies.min.js"></script>
    <script type="text/javascript" src="~/Scripts/sortable.js"></script>
    <script type="text/javascript" src="https://rawgit.com/thgreasi/ui-sortable-multiselection/master/src/ui.sortable.multiselection.js"></script>
    <script type="text/javascript" src="~/Scripts/ngDialog.min.js"></script>
    <script type="text/javascript" src="~/Scripts/app.js"></script>
    <script type="text/javascript" src="~/Scripts/other.js"></script>
    <script type="text/javascript" src="~/Scripts/snippets.js"></script>

    <!--ngDialog templates (see Views/Shared/_DialogTemplates.cshtml)-->
    @Html.Partial("_DialogTemplates")
    <!--/ngDialog templates-->
</head>
<body ng-controller="AppController as appController" ng-cloak>
    <div class="navbar navbar-inverse navbar-fixed-top" ng-hide="signInDialogStatus">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Repo DB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right" authentication-required>
                    <li>
                        <p class="navbar-text navbar-right">Signed in as <b>{{ authorisation.login }}</b></p>
                    </li>
                    <li>
                        <button class="navbar-btn navbar-right btn btn-warning" ng-click="signOut()" style="margin-left: 10px">SIGN OUT</button>
                    </li>
                </ul>
                <ul no-authentication-required>
                    <li>
                        <button class="navbar-btn navbar-right btn btn-primary" ng-click="openSignInDialog()" style="margin-left: 10px">SIGN IN</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" ng-hide="signInDialogStatus">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GitHub Repo List</p>
        </footer>
    </div>


</body>
</html>